<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253334"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".SoundPlaylist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="100dp"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="90dp"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/users_photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/forest_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60sp"
            android:text="Музыка"
            android:textColor="#fcfcfc"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/text_productive_relax"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:text="Иногда можете самое продуктивное, что вы сделать, - это расслабиться."
            android:textColor="#fcfcfc"
            android:textSize="13dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="enter_sound_player"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="начать"
            android:textAllCaps="false"
            android:textColor="#253334"
            android:textSize="15sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_next"
            app:iconGravity="textEnd"
            app:iconPadding="16dp"
            app:iconTint="#253334" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_forest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forest" />

        <TextView
            android:id="@+id/text_forest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_forest"
            android:text="Тропический лес"
            android:textColor="#FFFFFF"
             android:textSize="20sp" />


        <TextView
            android:id="@+id/num_of_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/img_forest"
            android:text="59899 прослушавших"
            android:textColor="#BEC2C2"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23sp"
            android:layout_marginTop="35dp"
            android:text="20 мин"
            android:textColor="#BEC2C2"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mountains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mountains" />

        <TextView
            android:id="@+id/text_mountains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_mountains"
            android:text="Высокие горы"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/num_of_list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/img_mountains"
            android:text="59899 прослушавших"
            android:textColor="#BEC2C2"
            android:textSize="10sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:text="15 мин"
            android:textColor="#BEC2C2"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_desert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/desert" />

        <TextView
            android:id="@+id/text_desert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_desert"
            android:text="Прекрасная пустыня"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/num_of_list3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/img_desert"
            android:text="59899 прослушавших"
            android:textColor="#BEC2C2"
            android:textSize="10sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:text="35 мин"
            android:textColor="#BEC2C2"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_hills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hills" />

        <TextView
            android:id="@+id/text_hills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_hills"
            android:text="Холмы на закате"
            android:textColor="#FFFFFF"
            android:textSize= "20sp" />


        <TextView
            android:id="@+id/num_of_list4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/img_hills"
            android:text="59899 прослушавших"
            android:textColor="#BEC2C2"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:text="45 мин"
            android:textColor="#BEC2C2"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

        <ImageView
            android:id="@+id/footer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#253334"
            android:src="@drawable/ic_footer_lotus"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/footer_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@id/footer_logo"
            android:background="#253334"
            android:src="@drawable/ic_music"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/footer_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@id/footer_music"
            android:background="#253334"
            android:src="@drawable/ic_footer_user"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>


</LinearLayout>