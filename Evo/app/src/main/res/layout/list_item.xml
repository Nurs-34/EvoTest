<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/body_of_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F3F0"
        android:padding="10dp"
        android:text="Тело света"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/personal_development"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="#F7F3F0"
        android:padding="10dp"
        android:text="Развитие личности через развитие знергетического  поля."
        android:textColor="#000000"
        android:textSize="13dp" />


    <ImageView
        android:id="@+id/card_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignEnd="@id/personal_development"
        android:layout_marginTop="20dp"
        android:src="@drawable/card_1"
        android:background="#F7F3F0"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_1"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#253334"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="начать"
        android:textAllCaps="false"
        android:textColor="#fcfcfc"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_next"
        app:iconGravity="textEnd"
        app:iconPadding="16dp"
        app:iconTint="@color/white" />
</RelativeLayout>
    </androidx.cardview.widget.CardView>

